// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String      @id @default(uuid())
  email     String      @unique
  name      String
  yearModel YearModel[]

  @@unique([id])
}

model YearModel {
  id          String       @id @default(uuid())
  year        String       @unique
  user        User         @relation(fields: [userId], references: [id])
  userId      String
  monthModels MonthModel[]
}

model MonthModel {
  id           String        @id @default(uuid())
  month        String
  yearModel    YearModel     @relation(fields: [yearModelId], references: [id])
  yearModelId  String
  chargeModels ChargeModel[]
}

model ChargeModel {
  id           String     @id @default(uuid())
  title        String
  price        String
  monthModel   MonthModel @relation(fields: [monthModelId], references: [id])
  monthModelId String
  categories   Category[]
}

model Category {
  id            String      @id @default(uuid())
  title         String
  chargeModel   ChargeModel @relation(fields: [chargeModelId], references: [id])
  chargeModelId String
}
